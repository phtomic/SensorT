{
  "npk_target": "dist/",
  "compilerOptions": {
    "outDir": "dist",
    "module": "Node16",
    "target": "ES5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/index.ts","src","test.ts"],
  "exclude": ["bin", "dist", ".docker", "node_modules"]
}
