{
  "npk_target": "dist/",
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "src/**/*.json", "exports"],
  "exclude": ["bin", "dist", ".docker", "node_modules", "tests"]
}
